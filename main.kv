<SignBoxLayout>:
    size_hint: 0.6, 0.4
    pos_hint:{'center_x':0.5,'center_y':0.5}
    BoxLayout:
        orientation:'vertical'
        MDLabel:
            text:'Sign Up'
        MDLabel:
            id:error
            text:''
            theme_text_color:'Error'
            font_style:'Caption'
        MDTextField:
            hint_text:"Email"
            helper_text:"Enter your email"
            helper_text_mode:"on_focus"
        MDTextField:
            id:passw
            hint_text:"Password"
            helper_text:"Enter your password"
            helper_text_mode:"on_focus"
            password:True
        MDTextField:
            id:copassw
            hint_text:"Re-enter Password"
            helper_text:"confirm your password"
            helper_text_mode:"on_focus"
            password:True
        MDRaisedButton:
            text:'press it monsieur'
            on_release:root.choice()
