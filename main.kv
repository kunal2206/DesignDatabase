ScreenManager:
    SignScreen:
    LogScreen:

<SignScreen>:
    name:'sign'
    BoxLayout:
        size_hint: 0.6, 0.4
        pos_hint:{'center_x':0.5,'center_y':0.5}
        orientation:'vertical'
        MDLabel:
            text:'Sign Up'
        MDLabel:
            id:error
            text:''
            theme_text_color:'Error'
            font_style:'Caption'
        MDTextField:
            id:email
            hint_text:"Email"
            helper_text:"Enter your email"
            helper_text_mode:"on_focus"
        MDTextField:
            id:passw
            hint_text:"Password"
            helper_text:"Enter your password"
            helper_text_mode:"on_focus"
            password:True
        MDTextField:
            id:copassw
            hint_text:"Re-enter Password"
            helper_text:"confirm your password"
            helper_text_mode:"on_focus"
            password:True
        MDRaisedButton:
            text:'Register'
            on_release:root.choice()
        BoxLayout:
            MDLabel:
                text:'Already have an account?'
                font_style:'Caption'
            MDTextButton:
                text:'Log In'
                on_release:root.manager.current = 'log'


<LogScreen>:
    name:'log'
    BoxLayout:
        size_hint: 0.6, 0.4
        pos_hint:{'center_x':0.5,'center_y':0.5}
        orientation:'vertical'
        MDLabel:
            text:'Sign In'
        MDLabel:
            id:check
            text:''
            theme_text_color:'Error'
            font_style:'Caption'
        MDTextField:
            id:mail
            hint_text:"Email"
            helper_text:"Enter your email"
            helper_text_mode:"on_focus"
        MDTextField:
            id:passwor
            hint_text:"Password"
            helper_text:"Enter your password"
            helper_text_mode:"on_focus"
            password:True
        MDRaisedButton:
            text:'Log In'
            on_release:root.available()
        BoxLayout:
            MDLabel:
                text:"Don't have an account"
                font_style:'Caption'
            MDTextButton:
                text:'Sign In'
                on_release:root.manager.current = 'sign'
